@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>
<!-- Кнопка для открытия модального окна -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editProductModal">
    Редактировать товар
</button>

<!-- Модальное окно для редактирования товара -->
<div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProductModalLabel">Редактировать товар</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Форма для редактирования товара -->
                <form id="editProductForm">
                    <!-- Здесь разместите поля для редактирования товара -->
                    <div class="mb-3">
                        <label for="productName" class="form-label">Название товара</label>
                        <input type="text" class="form-control" id="productName" placeholder="Введите название товара">
                    </div>
                    <div class="mb-3">
                        <label for="productDescription" class="form-label">Описание товара</label>
                        <textarea class="form-control" id="productDescription" rows="3" placeholder="Введите описание товара"></textarea>
                    </div>
                    <!-- Другие поля для редактирования товара -->
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="submit" class="btn btn-primary" form="editProductForm">Сохранить изменения</button>
            </div>
            <div id="imagePreview" class="image-preview">
                <div class="image-container" data-index="1">
                    <img src="data:image/jpeg;base64,/9j/4AAQooo=" draggable="true" data-index="1">
                    <div class="delete-icon">❌</div>
                </div>
                <div class="image-container" data-index="0">
                    <img src="data:image/jpeg;base64,/9j/4AAQooo=" draggable="true" data-index="0">
                    <div class="delete-icon">❌</div>
                </div>
                </div>
        </div>
    </div>
</div>




